<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MealActivity">


    <Button
        android:id="@+id/mondayBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="mondayBtnClick"
        android:text="Monday" />

    <Button
        android:id="@+id/tuesdayBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="tuesdayBtnClick"
        android:text="Tuesday" />

    <Button
        android:id="@+id/wednesdayBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="wednesdayBtnClick"
        android:text="Wednesday" />

    <Button
        android:id="@+id/thursdayBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="thursdayBtnClick"
        android:text="Thursday" />

    <Button
        android:id="@+id/fridayBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="fridayBtnClick"
        android:text="Friday" />

    <Button
        android:id="@+id/saturdayBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="saturdayBtnClick"
        android:text="Saturday" />

    <Button
        android:id="@+id/btnSunday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnSundayClick"
        android:text="Sunday" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="bottom"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >

            <Button
                android:id="@+id/weekDaysClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:onClick="weekDaysClearOnClick"
                android:text="Clear" />

            <Button
                android:id="@+id/weekDaysDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:onClick="weekDaysDoneOnClick"
                android:text="Done" />
        </RelativeLayout>

    </LinearLayout>
</TableLayout>